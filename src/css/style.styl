/*-- global --*/
*
  margin 0
  padding 0
  outline none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0)

html, body 
  height 100%
  -webkit-overflow-scrolling touch

body 
  overflow hidden
  font-family 'helvetica neue', helvetica, sans-serif

img 
  border 0
  display block

a
  text-decoration none

ul 
  list-style none

/*-- utils --*/
.abs 
  position absolute

.centerX
  margin-left 0
  margin-right 0
  left 0
  right 0

.button 
  display block

/*-- page --*/
#app 
  height 100%
  position relative
  overflow hidden

.slide
  top 0
  width 100%
  height 100%
  position absolute
  overflow hidden

.slide-active 
  z-index 2

.slide-next
  z-index 1

.page 
  top 0
  width 100%
  height 100%
  position absolute
  overflow hidden
  display flex
  align-items center
  justify-content center
  color #fff

/*-- transition --*/
.slide-fade-out 
  animation slide-fade-out 300ms ease-out 
  animation-fill-mode forwards

@keyframes slide-fade-out
  0% 
    opacity 100
  100%
    opacity 0

/*-- nav --*/
ul.nav 
  width 100%
  height 50px
  position absolute
  z-index 10
  bottom 0
  display flex
  li
    width 33.33%
    display inline-block
    color #fff
    font-size 20
    line-height 50px
    text-align center
    background-color rgba(0, 0, 0, 0.3)
    cursor pointer
